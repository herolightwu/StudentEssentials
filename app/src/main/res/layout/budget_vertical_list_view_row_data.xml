<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vertical_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView
                android:id="@+id/txt_bill_date"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingLeft="5dp"
                android:text="19-9-2010"
                android:textSize="14dp"
                android:textColor="@color/black"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:weightSum="3"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="30dp"
                android:src="@drawable/budget"
                android:tint="@color/theme_color"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.1"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_bill_name"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Bill List Name"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/txt_bill_location"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="location"
                    android:textColor="@color/colorTransGray"
                    android:textSize="14dp"
                     />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_bill_pay"
                android:layout_width="wrap_content"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:text="$45"
                android:gravity="center|right"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorSky"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>